<div class="container-banner">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "Superpower.png" %>');">
      <h1>Superpower your life</h1>
  <div class="category">
    <% @categories.each do |category| %>
  <div class="card-category-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path  "background_images/#{category.url}" %>)">
    <%= link_to category.name, superpowers_path(category_id: category.id) %>
  </div>
    <% end %>
</div>
